%div.card.p-4.shadow-sm.mx-auto.w-50
  %h2.text-center Sign up
  #form
    = form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f|
      = render "organizations/shared/error_messages", resource: resource
      .field.d-flex.flex-column.mb-3
        = f.label :email, class: "form-label m-0"
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email"
      .field.d-flex.flex-column.mb-3
        = f.label :organization_name, class: "form-label m-0"
        = f.text_field :organization_name, autofocus: true, autocomplete: "organization_name",  class: "form-control", placeholder: "Organization Name"
      .field.d-flex.flex-column.mb-3
        = f.label :subdomain, class: "form-label m-0"
        = f.text_field :subdomain, autofocus: true, autocomplete: "subdomain", class: "form-control", placeholder: "Subdomain"
      .field.d-flex.flex-column.mb-3
        = f.label :password, class: "form-label m-0"
        = f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password #{@minimum_password_length} characters minimum"
      .field.d-flex.flex-column.mb-3
        = f.label :password_confirmation, class: "form-label m-0"
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password",  class: "form-control", placeholder: "Password Confirmation"
      .actions
        = f.submit "Sign up", class: "btn btn-primary"
  = render "organizations/shared/links"
