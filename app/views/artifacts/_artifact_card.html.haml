.card
  .card-header.bg-primary.text-white.d-flex.justify-content-between.align-items-center
    = artifact.name
  .card-body
    = artifact.description

    = form_with url: update_status_project_artifact_path(artifact.project, artifact), method: :patch, local: true do |f|
      .form-group
        = f.label :status, "Change Status:"
        = f.select :status, [["Open", 0], ["In Progress", 1], ["Closed", 2]], {}, class: "form-control", onchange: "this.form.submit()"

  .card-footer.d-flex.justify-content-between
    = link_to 'Edit', edit_project_artifact_path(artifact.project, artifact), class: "btn btn-outline-primary"
    = link_to 'Back', project_artifacts_path(artifact.project), class: "btn btn-secondary"
