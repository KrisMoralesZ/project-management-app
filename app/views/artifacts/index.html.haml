%h1 Listing artifacts

%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Description
      %th Status
      %th Show
  %tbody
    - @artifacts.each do |artifact|
      %tr
        %td= artifact.name
        %td= artifact.description
        - if artifact.status == 0
          %td= "Open"
        - elsif artifact.status == 1
          %td= "In Progress"
        -else artifact.status == 2
          %td= "Closed"
        %td= link_to 'Show', project_artifact_path(artifact.project, artifact)
%br

= link_to 'New Artifact', new_project_artifact_path
