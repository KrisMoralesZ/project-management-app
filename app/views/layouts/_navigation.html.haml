%nav.navbar.navbar-expand-lg.bg-light
  .d-flex.flex-row
    - if organization_signed_in?
      %a.navbar-brand{:href => "/"}
        %h1 #{current_organization.organization_name}
        .container.d-flex.flex-row.justify-content-between.align-items-center
          .d-flex.justify-content-between.w-100
            .d-flex.justify-content-between.align-items-center
              = link_to "Dashboard", dashboard_path, :class => "nav-link"
              = button_to "Logout", destroy_organization_session_path, method: :delete, class: "btn btn-danger ps-2"
    - else
      %h1 SASS APP
      = link_to "Login", new_organization_session_path, class: "btn btn-primary"