- content_for :title, @project.title

%div.container.mt-5
  - if notice
    .alert.alert-success.text-center= notice

  .card.shadow-sm
    .card-header.bg-primary.text-white.d-flex.justify-content-between.align-items-center
      %h2.mb-0= @project.title
      %span.badge.bg-light.text-dark.ms-2
        %i.fas.fa-calendar-alt.me-1
        Expected: #{@project.expected_completion_date.strftime('%B %d, %Y')}

    .card-body
      %h5.text-muted.mb-3 Details
      %p.lead= @project.details

    .card-footer.d-flex.justify-content-between
      = link_to 'Edit', edit_project_path(@project), class: "btn btn-outline-primary"
      = link_to 'Back to Projects', projects_path, class: "btn btn-secondary"

%h3 Users working on this project

%h3 Add users

= turbo_frame_tag "members_search" do
  = form_with url: project_search_members_path(@project), method: :post, local: false do |f|
    = f.label :query, "Search for users"
    = f.text_field :query, class: "form-control"
    = f.submit "Search", class: "btn btn-primary"

= turbo_frame_tag "members_search_results"