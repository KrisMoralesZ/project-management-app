%h1 Projects

%table.table.table-striped
  %thead
    %tr
      %th Title
      %th Details
      %th Completion Date
      %th Actions
  %tbody
    - @projects.each do |project|
      %tr
        %td= project.title
        %td= project.details
        %td= project.expected_completion_date.strftime('%Y-%m-%d')
        %td
          = link_to "Show", project_path(project)

= link_to 'New Project', new_project_path

