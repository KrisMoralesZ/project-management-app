= form_for @project, html: { class: "card p-4 shadow-sm mx-auto", style: "max-width: 600px;" }, data: { turbo: false } do |f|
  - if @project.errors.any?
    .alert.alert-danger
      %h4.alert-heading= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul.mb-0
        - @project.errors.full_messages.each do |message|
          %li= message

  .mb-3
    = f.label :title, class: "form-label"
    = f.text_field :title, class: "form-control", placeholder: "Enter project title"

  .mb-3
    = f.label :details, class: "form-label"
    = f.text_field :details, class: "form-control", placeholder: "Enter project details"

  .mb-3
    = f.label :expected_completion_date, class: "form-label"
    = f.date_field :expected_completion_date, class: "form-control"

  .d-flex.justify-content-between
    = f.submit 'Save', class: "btn btn-primary"
    = link_to 'Back', projects_path, class: "btn btn-secondary"
