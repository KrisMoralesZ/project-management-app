%div.card.p-4.shadow-sm.mx-auto.w-50
  %h2
    Edit #{resource_name.to_s.humanize}
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field.d-flex.flex-column.mb-3
      = f.label :email, class: "form-label m-0"
      = f.email_field :email, autofocus: true, autocomplete: "email"
    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %div
        Currently waiting confirmation for: #{resource.unconfirmed_email}
    .field.d-flex.flex-column.mb-3
      = f.label :password, class: "form-label m-0"
      %i (leave blank if you don't want to change it)
      = f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "New Password #{@minimum_password_length} characters minimum "
    .field.d-flex.flex-column.mb-3
      = f.label :password_confirmation, class: "form-label m-0"
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "New Password #{@minimum_password_length} characters minimum "
    .field.d-flex.flex-column.mb-3
      = f.label :current_password, class: "form-label m-0"
      %i (we need your current password to confirm your changes)
      = f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "Current Password"
    .actions
      = f.submit "Update", class: "btn btn-primary"

%div.mt-4.text-center.w-30
  %h3 Cancel my account
  %div
    %h6 Unhappy?
    %div.d-flex.justify-content-between
      = button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger"
      = link_to "Back", root_path, class: "btn btn-secondary"
