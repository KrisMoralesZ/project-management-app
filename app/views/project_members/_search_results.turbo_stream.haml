- if results.any?
  %table.table.table-striped
    %thead
      %tr
        %th Name
        %th Email
        %th.text-end Actions
    %tbody
      - results.each do |user|
        %tr
          %td= user.name
          %td= user.email
          %td.text-end
            = button_to project_add_member_path(project, user_id: user.id),
                        method: :post,
                        class: "btn btn-sm btn-primary" do
              Add to Project
- else
  %p.text-muted No matching users found.
